                            <h5 class="card-title">{{ produit.libelle }}</h5>
                            <p class="card-text">{{ produit.price }} €</p>
                            <div>
                                {{ form_row(forms[produit.id].quantity , { 'attr' : {'min' : 0 , 'max' : produit.quantStock}}) }}

                            </div>

                            {{ form_row(forms[produit.id].send) }}


                        </div>
                    </div>
                </div>
                    {{ form_end(forms[produit.id], {render_rest: false}) }}
