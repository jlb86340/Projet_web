{% extends 'Layouts/layout_niv2.html.twig' %}

{% block title %}{{ parent() }} : Liste des utilisateurs{% endblock %}

{% block titre_principal %}{{ parent() }} : Liste des utilisateurs{% endblock %}
{% block vue %}
    {% if users|length == 0 %}
        <p>Aucun produit dans la base de données</p>
    {% else %}
        <table>
            <tr>
                <th>login</th>
                <th>mot de passe</th>
                <th>nom</th>
                <th>prénom</th>
                <th>date de naissance</th>
                <th>statut</th>
            </tr>
            {% for user in users %}
                <tr>
                    <td>{{ user.login }}</td>
                    <td>{{ user.password }}</td>
                    <td>{{ user.name }}</td>
                    <td>{{ user.surname }}</td>
                    <td>{{ user.birthdate |date("m/d/Y")}}</td>
                    <td>{{ user.roles[0] }}</td>
                    {% if (user.roles[0] != 'ROLE_SUPERADMIN') %}
                    <td><a href="{{ path('app_user_delete', {'id' : user.id}) }}">Supprimer</a></td>
                    {% endif %}
                </tr>
            {% endfor %}
        </table>
    {% endif %}
{% endblock %}
